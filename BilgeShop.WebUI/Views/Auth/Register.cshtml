@model RegisterViewModel

<div class="row">

    <div class="col-6 offset-3 pb-3">

        <div class="card">
            <div class="card-header fw-bold fs-5">Hesap Oluşturun</div>


            <div class="card-body">
                <form class="mt-3" method="post" asp-controller="Auth" asp-action="Register">
                    <!-- 2 column grid layout with text inputs for the first and last names -->
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="form-floating mb-3">
                                <input asp-for="FirstName" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
                                <label class="required" asp-for="FirstName" for="floatingInput">Ad</label>
                                <span class="text-danger" asp-validation-for="FirstName"></span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="form-floating mb-3">
                                <input asp-for="LastName" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
                                <label class="required" asp-for="LastName" for="floatingInput">Soyad</label>
                                <span class="text-danger" asp-validation-for="LastName"></span>

                            </div>
                        </div>
                    </div>

                    <!-- Email input -->
                    <div class="form-floating mb-3">
                        <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label class="required" asp-for="Email" for="floatingInput">Eposta</label>
                        <span class="text-danger" asp-validation-for="Email"></span>

                    </div>



                    <!-- Parola ve Parola Tekrarı-->

                    <div class="row mt-5">
                        <div class="col-md-6 mb-4">
                            <div class="form-floating mb-3">
                                <input asp-for="Password" type="password" class="form-control" id="floatingInput" placeholder="name@example.com">
                                <label class="required" asp-for="Password" for="floatingInput">Parola</label>

                            </div>
                            <span class="text-danger" asp-validation-for="Password"></span>

                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="form-floating mb-3">
                                <input asp-for="PasswordConfirm" type="password" class="form-control" id="floatingInput" placeholder="name@example.com">
                                <label class="required" asp-for="PasswordConfirm" for="floatingInput">Parola Tekrar</label>

                            </div>
                            <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                        </div>

                    </div>

                    <!-- Password Confirm input-->
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-block mb-4 text-light" style="background-color:darkmagenta">
                        Kayıt Ol
                    </button>


                </form>

            </div>
        </div>


    </div>

</div>



@section Scripts {

    <script>


        $(document).ready(function () {

            toastr.options = {
                'closeButton': false,
                'debug': false,
                'newestOnTop': true,
                'progressBar': false,
                'positionClass': 'toast-top-center',
                'preventDuplicates': false,
                'showDuration': '1000',
                'hideDuration': '1000',
                'timeOut': '5000',
                'extendedTimeOut': '1000',
                'showEasing': 'swing',
                'hideEasing': 'linear',
                'showMethod': 'fadeIn',
                'hideMethod': 'fadeOut',
            }

        @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage?.ToString()))
        {
            @:toastr.options.closeHtml = '<button class="closebtn"><i class="bi bi-x"></i></button>';
            @:toastr.error("@ViewBag.ErrorMessage?.ToString()", "Bildirim:");
        }


                                });


    </script>

}
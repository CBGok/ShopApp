<html>
<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css"     integrity="sha512-6S2HWzVFxruDlZxI3sXOZZ4/eJ8AcxkQH1+JjSe/ONCEqR9L4Ysq5JdT5ipqtzU7WHalNwzwBv+iE51gNHJNqQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link href="~/css/card.css" rel="stylesheet" />

    <style>

        label.required:after {
            content: "*\00a0";
            color: red;
            margin-left: 2px
        }

        .toast-success, .toast-info, .toast-warning, .toast-error {
            width: 400px !important;
            font-family: 'Poppins', sans-serif;
            font-size: 1rem;
            border-radius: 1rem !important;
            background-color: #edf1fd;
            color: #01081e !important;
            border-color: transparent !important;
        }

        #toast-container > .toast-error {
            background-image: url('data:image/png;base64,') !important;
        }


        #toast-container > .toast-success {
            background-image: url('data:image/png;base64,') !important;
        }

        .closebtn {
            width: 25px;
            height: 25px;
            border-radius: 50%;
            background-color: #ccd7fc !important;
        }

            .closebtn > i {
                color: #000617;
                font-weight: 500;
            }

    
    </style>

</head>
<body class="d-flex flex-column min-vh-100">

    <header class="text-light" style="background-color:#343a40">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                 
                
                <a href="/"><img src="~/images/logo.png"  alt="Logo" height="120px" width="120px" class="d-inline-block align-text-top">
                </a>
                

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                </ul>

                <div id="login" class="d-none">
                    <partial name="_LoginPartial" model="new LoginViewModel()" />
                </div>

                @if (!User.IsLogged())
                {
                    <div id="welcome">
                        <partial name="_WelcomePartial" />
                    </div>
                }
                else
                {
                    var firstName = User.GetUserFirstName();
                    var lastName = User.GetUserLastName();

                    <div class="d-flex">

                        @if (User.IsAdmin())
                        {
                            <div class="ms-3 me-3">

                                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-danger btn-outline-light">Yönetim Paneli</a>

                            </div>

                        }


                        <div class="fst-italic fw-bold mt-2 me-3">
                            Hoş Geldin @firstName @lastName
                        </div>

                        <a asp-controller="Auth" asp-action="Logout" class="btn btn-outline-warning" >Çıkış Yap</a>

                    </div>

                }



            </div>
        </div>
    </header>

    <div class="container mt-4">

        @RenderBody()
    </div>


    <footer class="bg-dark text-white text-center py-4 mt-auto">

        YZL8748 | BilgeShop
        <hr />
        <p class="text-secondary">Tüm Hakları Bana Ait</p>

    </footer>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>

        $('#btnGirisYap').click(function () {

            $('#login').removeClass('d-none');
            $('#welcome').addClass('d-none')

        })
        $('#btnIptal').click(function () {

            $('#login').addClass('d-none');
            $('#welcome').removeClass('d-none');

        })

        $(document).ready(function () {

            toastr.options = {
                'closeButton': true,
                'debug': false,
                'newestOnTop': true,
                'progressBar': false,
                'positionClass': 'toast-top-center',
                'preventDuplicates': false,
                'showDuration': '1000',
                'hideDuration': '1000',
                'timeOut': '5000',
                'extendedTimeOut': '1000',
                'showEasing': 'swing',
                'hideEasing': 'linear',
                'showMethod': 'fadeIn',
                'hideMethod': 'fadeOut',
            }

        @if (!string.IsNullOrWhiteSpace(TempData["SuccessMessage"]?.ToString()))
        {
            @:toastr.options.closeHtml = '<button class="closebtn"><i class="bi bi-x"></i></button>';
            @:toastr.success("@TempData["SuccessMessage"]?.ToString()", 'Bildirim');

        }



        });

    </script>

    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>